<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.fixtter.sgtel.fixtter_user_android.Inicio">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/inicio_bienvenido"
            android:textSize="20dp" />

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:src="@drawable/fixtterlogo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/colorWhite"
        android:text="@string/inicio_iniciosesion"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/colorWhite"
        android:text="@string/inicio_nuevousuario"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="@color/colorWhite"
        android:id="@+id/btn_llamada"
        android:text="@string/inicio_llamar"/>
    </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
