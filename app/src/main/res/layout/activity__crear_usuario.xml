<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.fixtter.sgtel.fixtter_user_android.Interfaces.Activity_CrearUsuario">
    <android.support.design.widget.AppBarLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:title="@string/crearusuario_titulo"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/fixtterlogo" />

        <EditText
            android:id="@+id/txt_nombre"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_border_edittext"
            android:gravity="center"
            android:hint="@string/crearusuario_nombre"
            android:inputType="text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txt_apellido"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_border_edittext"
            android:gravity="center"
            android:hint="@string/crearusuario_apellido"
            android:inputType="text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txt_cell"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_border_edittext"
            android:gravity="center"
            android:hint="@string/crearusuario_celular"
            android:inputType="number"
            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner1"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_spinner"
            android:gravity="center"
            android:textAlignment="center"
            android:spinnerMode="dropdown">

        </android.support.v7.widget.AppCompatSpinner>

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_border_edittext"
            android:gravity="center"
            android:hint="@string/crearusuario_correo"
            android:inputType="text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txt_pass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_border_edittext"
            android:gravity="center"
            android:hint="@string/crearusuario_contraseÃ±a"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_registrar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/colorAccent"
                android:text="@string/crearusuario_btnregistrar"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
